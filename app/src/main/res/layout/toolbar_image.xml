<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              xmlns:app = "http://schemas.android.com/apk/res-auto"
              android:layout_width = "match_parent"
              android:layout_height = "wrap_content"
              android:gravity = "center_vertical"
              android:weightSum = "1" android:background="@drawable/background_transparent_p">


    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width = "32dp"
                android:layout_height = "32dp"
                android:layout_marginLeft="0dp"
                android:onClick="BackButtonCustom"
                android:id="@+id/btnBack"
                android:layout_gravity="start|center_vertical"
                android:src = "@drawable/ic_arrow_back_black_24dp" />

        <ImageView
                android:layout_width = "32dp"
                android:layout_height = "32dp"
                android:visibility="invisible"
                android:layout_marginLeft="0dp"
                android:onClick="OpenMenu"
                android:id="@+id/btnMenu"
                android:layout_gravity="start|center_vertical"
                android:src = "@drawable/ic_menu_black_24dp" />

        <ImageView
                android:layout_width = "wrap_content"
                android:layout_height = "53.333dp"
                android:layout_gravity="center"
                android:src = "@drawable/dap_red"/>

        <ImageView
                android:layout_width = "32dp"
                android:layout_height = "32dp"
                android:layout_marginRight="0dp"
                android:layout_gravity="end|center_vertical"
                android:src = "@drawable/ic_star_black_menu_24dp"
                android:onClick="btnFavoritosPress"/>

    </FrameLayout>
</LinearLayout>
