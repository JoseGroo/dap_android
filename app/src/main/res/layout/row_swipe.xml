<?xml version="1.0" encoding="utf-8"?>

<com.daimajia.swipe.SwipeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clickToClose="true"
        android:id="@+id/row_swipe_1">

    <LinearLayout
            android:tag="Bottom1"
            android:id="@+id/bottom_wrapper"
            android:background="#66ddff00"
            android:layout_width="160dp"
            android:weightSum="1"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/Phones"
                android:src="@drawable/ic_phoneicon"
                android:layout_width="70dp"
                android:layout_weight="0.5"
                android:background="@drawable/red"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />

        <ImageView
                android:id="@+id/Emails"
                android:src="@drawable/ic_emailicon_outlet"
                android:layout_width="70dp"
                android:layout_weight="0.5"
                android:background="#f7e79c"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
            android:tag="Bottom4"
            android:id="@+id/bottom_wrapper_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/Geolocalizacion"
                android:src="@drawable/ic_addressicon"
                android:layout_width="100dp"
                android:background="@mipmap/ic_background_maps_white"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
            android:tag="Bottom3"
            android:id="@+id/starbott"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:id="@+id/bottom_wrapper_child1"
                android:background="@color/colorPrimary"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ImageView
                    android:id="@+id/star"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:src="@color/colorPrimaryDark"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />
        </RelativeLayout>
    </LinearLayout>

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                 xmlns:app="http://schemas.android.com/apk/res-auto"
                                                 xmlns:tools="http://schemas.android.com/tools"
                                                 android:layout_width="match_parent"
                                                 android:layout_height="wrap_content">

        <TextView
                android:text="Contraloria"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtPuestoR" app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                android:singleLine="false"
                app:layout_constraintTop_toBottomOf="@+id/txtNombreR" android:textSize="15sp" android:textColor="#504E50"/>
        <TextView
                android:text="Turismo"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtUnidadR" app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                android:singleLine="false"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/txtPuestoR" app:layout_constraintVertical_bias="0.0"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_percent="0.024623804"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline2"
                                              android:orientation="horizontal"
                                              app:layout_constraintGuide_begin="109dp"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline4"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.25790754"/>
        <android.support.constraint.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/guideline5"
                                              android:orientation="vertical"
                                              app:layout_constraintGuide_percent="0.8807786"/>
        <!--<ImageView
                android:layout_width="95dp"
                android:layout_height="90dp" app:srcCompat="@mipmap/ic_launcher_round"
                android:id="@+id/iImageR"
                app:layout_constraintTop_toTopOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline4" android:layout_marginTop="5dp"/>-->
        <com.mikhaellopez.circularimageview.CircularImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_icon_perfil_round"
                app:civ_border_color="#a9a9a5"
                app:civ_border_width="1dp"
                app:civ_shadow="true"
                app:civ_shadow_radius="1"
                app:layout_constraintEnd_toStartOf="@+id/guideline4"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/iImageR"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/guideline2"/>

        <TextView
                android:text="Dr. Juan Lopez"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:id="@+id/txtNombreR" app:layout_constraintStart_toStartOf="@+id/guideline4"
                app:layout_constraintTop_toTopOf="@+id/guideline" app:layout_constraintEnd_toStartOf="@+id/guideline5"
                android:singleLine="false" android:textSize="17dp" android:textStyle="bold" android:textColor="#2C2B2B"
                android:layout_marginTop="5dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_chevronrighticon"
                android:id="@+id/imageView3"
                android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="@+id/guideline" android:layout_marginBottom="8dp"
                app:layout_constraintStart_toStartOf="@+id/guideline5" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>

</com.daimajia.swipe.SwipeLayout>
