<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ListaServidoresActivity"
        android:focusableInTouchMode="true">

    <EditText android:layout_width="match_parent"
              android:layout_height="50dp"
              android:drawableLeft="@drawable/ic_search_black_24dp_filtros"
              android:id="@+id/btnSearch"/>
    <ListView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/list"
              android:dividerHeight="10.0sp"
              tools:layout_editor_absoluteX="149dp"
              app:layout_constraintTop_toBottomOf="@+id/btnSearch"
    android:layout_marginTop="5dp">
    </ListView>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/buscarFloating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"

            android:src="@drawable/ic_search_black_24dp"
            android:layout_margin="16dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="@+id/list"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
           />

</android.support.constraint.ConstraintLayout>
